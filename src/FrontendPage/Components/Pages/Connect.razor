@page "/connect"
@rendermode InteractiveServer

<PageTitle>Conect</PageTitle>
<h1>Connect</h1>

<p>Address: @_address</p>
 
@if (_connected)
{
    <p>Host: @_host; Id: @_id</p>
    <ul>
        @foreach (var item in _log)
        {
            <li>@item</li>
        }
    </ul>
}
else
{
    <p>Connecting...</p>
}
